module Decoder(
  input [3:0] binary_input,
  output [7:0] bcd_output
);

  always_comb begin
    case (binary_input)
      4'b0000: bcd_output = 8'b0111_1110; // 0
      4'b0001: bcd_output = 8'b0011_0000; // 1
      4'b0010: bcd_output = 8'b0110_1101; // 2
      4'b0011: bcd_output = 8'b0111_1001; // 3
      4'b0100: bcd_output = 8'b0011_0011; // 4
      4'b0101: bcd_output = 8'b0101_1011; // 5
      4'b0110: bcd_output = 8'b0101_1111; // 6
      4'b0111: bcd_output = 8'b0111_1000; // 7
      4'b1000: bcd_output = 8'b0111_1111; // 8
      4'b1001: bcd_output = 8'b0111_1011; // 9
      default: bcd_output = 8'b0000_0000; // En caso de entrada invalida
    endcase
  end

endmodule
